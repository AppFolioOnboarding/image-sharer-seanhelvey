<%= image_tag(@image.url, :class => "img") %>
<div>
  <% @image.tag_list.each do |tag| %>
    <span>
      <%= link_to tag, images_path(:tag => tag) %>
    </span>
  <% end %>
  <%= button_to "Delete Image", { action: "destroy", id: @image.id },
                method: :delete, data: { confirm: "Are you sure?" } %>
</div>
