<%= simple_form_for @image do |f| %>
  <%= f.input :url, required: true%>
  <% if @image.errors.any? %>
    <%= f.hint 'Please enter valid image url' %>
    <%= f.error :url, id: 'url_error' %>
  <% end %>
  <%= f.input :tag_list, label: 'Comma separated tags', placeholder: 'funny, awesome, etc.', required: true%>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
